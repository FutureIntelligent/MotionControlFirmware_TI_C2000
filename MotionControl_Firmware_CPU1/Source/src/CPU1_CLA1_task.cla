/**
 *  task 7 is used to reset current controller
 */
__interrupt void Cla1Task7 ( void )
{
  CL_Integral_Ia = 0;
  CL_Integral_Ib = 0;
}

/**
 *  task 8 is used to initialize CLA variables
 */
__interrupt void Cla1Task8 ( void )
{
  CLA_SampleBufferActiveHalf = 1;
  CLA_SampleCounter = 0;
  CLA_CycleCounter = 0;

  CL_Kp = 0;
  CL_Ki = 0;
}
